<%= form_for(@listing, html: { multipart: true }) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="container">
  <div class="form-group">
    <%= f.label :status, 'Status' %><br>
    <%= f.text_field :status, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :lead_type, 'Lead Type' %><br>
    <%= f.text_field :lead_type, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :property_type, 'Property Type' %><br>
    <%= f.text_field :property_type, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :location, 'Location' %><br>
    <%= f.text_field :location, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :avr, 'After Repaired Value' %><br>
    <%= f.text_field :avr, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :asking_price, 'Seller Asking Price' %><br>
    <%= f.text_field :asking_price, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :repair_cost, 'Estimated Rehab Cost' %><br>
    <%= f.text_field :repair_cost, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :profit, 'Potential Profit' %><br>
    <%= f.text_field :profit, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image, 'Load Property Image' %><br>
    <%= f.file_field :image, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-success"%>
  </div>
<% end %>
</div>